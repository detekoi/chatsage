{
    "comment": "This is an example configuration structure. The application primarily uses environment variables (.env file or system env). This file is for reference.",
    "twitch": {
      "username": "your_bot_username",
      "channels": [
        "channel1",
        "channel2"
      ],
      "clientId": "your_twitch_app_client_id",
      "clientSecret": "your_twitch_app_client_secret"
    },
    "secrets": {
      "twitchBotRefreshTokenName": "projects/your-project-id/secrets/twitch-bot-refresh-token/versions/latest"
    },
    "gemini": {
      "apiKey": "your_gemini_api_key",
      "modelId": "gemini-2.0-flash-001"
    },
    "app": {
      "streamInfoFetchIntervalSeconds": 120,
      "logLevel": "info",
      "prettyLog": true,
      "nodeEnv": "development"
    },
    "eventsub": {
      "comment": "EventSub configuration for zero-instance Cloud Run deployment",
      "secret": "your_eventsub_webhook_secret",
      "publicUrl": "https://your-service-name.a.run.app"
    }
  }